<%- include('./Layouts/header.ejs') -%>
        <h1 class="head">Sign Up Page</h1>
    </div>

    <div id="main">
        <form id="sign" action="#" method="POST">
            <h2 class="head">Create Your Account</h2>
            <div class="slot">
                <label for="username" class="intext">Username:</label>
                <input type="text" id="username" name="username" required>
            </div>

            <div class="slot">
                <label for="email" class="intext">Email:</label>
                <input type="email" id="email" name="email" required>
            </div>

            <div class="slot">
                <label for="password" class="intext">Password:</label>
                <input type="password" id="password" name="password" required>
            </div>

            <div class="slot">
                <label for="confirm-password" class="intext">Confirm Password:</label>
                <input type="password" id="confirm-password" name="confirm-password" required>
            </div>

            <div class="slot">
                <button type="submit">Sign Up</button>
            </div>

            <div class="slot">
                <p>Already have an account? <a href="login.html">Login here</a></p>
            </div>
        </form>
    </div>

    <%- include('./Layouts/footer.ejs') -%>