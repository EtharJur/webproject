<%- include('./Layouts/header.ejs') -%>

<div id="">
    <h1 class="" style="color: #d57157">Sign Up Page</h1>

    <!-- Flash Messages for Errors & Success -->
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger">
            <%= messages.error %>
        </div>
    <% } %>

    <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>

    <form id="sign" action="/auth/signup" method="POST"> <!-- Ensuring form action is correct -->
        <h2 class="">Create Your Account</h2>

        <div class="">
            <label for="name" class="intext">Name:</label>
            <input type="text" id="name" name="name" required>
        </div>

        <div class="">
            <label for="email" class="intext">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="">
            <label for="password" class="intext">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>

        <div class="">
            <label for="confirm-password" class="intext">Confirm Password:</label>
            <input type="password" id="confirm-password" name="confirm_password" required>
        </div>

        <div class="">
            <button type="submit">Sign Up</button>
        </div>

        <div class="">
            <p>Already have an account? <a href="/login">Login here</a></p>
        </div>
    </form>
</div>

<%- include('./Layouts/footer.ejs') -%>