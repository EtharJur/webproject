<%- include('./Layouts/header.ejs') -%>

<section>
    <% juices.forEach(function(juice) { %> 
        <div class="recipe">
            <h2><%= juice.name %></h2>
            <img src="<%= juice.image %>" alt="<%= juice.name %>">
            <p><%= juice.description %></p>

            <h3>Ingredients:</h3>
            <ul>
                <% juice.ingredients.forEach(function(ingredient) { %>
                    <li><%= ingredient %></li>
                <% }); %>
            </ul>

            <h3>Instructions:</h3>
            <ol>
                <% juice.recipe.forEach(function(instruction) { %>
                    <li><%= instruction %></li>
                <% }); %>
            </ol>
        </div>
    <% }); %>
</section>

<%- include('./Layouts/footer.ejs') -%>