<%- include('./Layouts/header.ejs') -%>

<section>
    <% salads.forEach(function(salad) { %> 
        <div class="recipe">
            <h2><%= salad.name %></h2>
            <img src="<%= salad.image %>" alt="<%= salad.name %>">
            <p><%= salad.description %></p>

            <h3>Ingredients:</h3>
            <ul>
                <% salad.ingredients.forEach(function(ingredient) { %>
                    <li><%= ingredient %></li>
                <% }); %>
            </ul>

            <h3>Instructions:</h3>
            <ol>
                <% salad.recipe.forEach(function(instruction) { %>
                    <li><%= instruction %></li>
                <% }); %>
            </ol>
        </div>
    <% }); %>
</section>

<%- include('./Layouts/footer.ejs') -%>