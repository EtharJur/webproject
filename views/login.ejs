<%- include('./Layouts/header.ejs') -%>

<div id="">
    <h1 class="log" style="color: #d57157">Log in Page</h1>

    <!-- Flash Messages for Errors & Success -->
    <% if (messages.error && messages.error.length > 0) { %>
        <div class="alert alert-danger">
            <%= messages.error %>
        </div>
    <% } %>

    <% if (messages.success && messages.success.length > 0) { %>
        <div class="alert alert-success">
            <%= messages.success %>
        </div>
    <% } %>

    <form id="sign" action="/auth/login" method="POST"> <!-- Ensuring form action is correct -->
        <h2 class="">Login to Your Account</h2>

        <div class="">
            <label for="email" class="intext">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="">
            <label for="password" class="intext">Password:</label>
            <input type="password" id="password" name="password" required>
        </div>

        <div class="">
            <button type="submit">Login</button>
        </div>

        <div class="">
            <p>Don't have an account? <a href="/signup">Sign up here</a></p>
        </div>
    </form>
</div>

<%- include('./Layouts/footer.ejs') -%>
